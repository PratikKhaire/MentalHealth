<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_gravity="center_horizontal"
        android:text="Question 1 of 5: What is the capital of France?"/>

    <RadioGroup
        android:id="@+id/answer_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/answer_radio_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York"/>

        <RadioButton
            android:id="@+id/answer_radio_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="London"/>

        <RadioButton
            android:id="@+id/answer_radio_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paris"/>

        <RadioButton
            android:id="@+id/answer_radio_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tokyo"/>
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Your score is:"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
